<script>
	var cur_count = <%=cur_count%>
	
	$(".btn-img-select").unbind('click');
	
	
	$(".btn-img-select").click(function(e){
		
		iid  = $(this).attr("iid")
	    
		cur_count = 0 
		max_count = 0 
		$(".btn-img-select").each(function(){
			v = parseInt($(this).val())
			if(v>0){
				cur_count++;
				if(max_count<v)
					max_count=v
			}
		});
		if(max_count>cur_count){
			cur_count = max_count;
		}
		
		
		
		v = $(this).attr("value")
		if(parseInt(v)>0){
			v = parseInt($(this).val())
			if(v==cur_count){
				cur_count-=1;
			}
			$(this).removeClass("btn-success")
			$(this).val(" ");
			$("#val-img-"+iid).val("")
		}else{
			$(this).addClass("btn-success")
			
			$(this).val(cur_count+1);
			$("#val-img-"+iid).val(cur_count+1)
			$("#val-img-"+iid).val("1")
			
			cur_count+=1;
			
			
		}
		
		
		e.preventDefault()
		
		update_image();
		
	})
</script>